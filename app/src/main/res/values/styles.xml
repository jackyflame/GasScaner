<resources>
    <style name="user_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/padding_xxxl</item>
        <item name="android:paddingRight">@dimen/padding_xxxl</item>
        <item name="android:paddingTop">@dimen/padding_l</item>
        <item name="android:paddingBottom">@dimen/padding_l</item>
    </style>

    <style name="info_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">@dimen/padding_xl</item>
        <item name="android:paddingRight">@dimen/padding_xl</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">@dimen/padding_xl</item>
    </style>
</resources>
